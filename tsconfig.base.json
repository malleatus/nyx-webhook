{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "baseUrl": ".",

    "paths": {
      "*": ["types/*"]
    }

  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}
